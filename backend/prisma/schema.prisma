// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  username     String   @unique
  email        String   @unique
  passwordHash String   @map("password_hash")
  isAdmin      Boolean  @default(false) @map("is_admin")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  recipes      Recipe[]
  geminiUsage  GeminiUsage[]

  @@map("users")
}

model Recipe {
  id           String   @id @default(uuid())
  name         String
  description  String?
  prepTime     Int?     @map("prep_time")  // minutes
  cookTime     Int?     @map("cook_time")  // minutes
  totalTime    Int?     @map("total_time") // minutes
  servings     Int?
  ingredients  Json     // Array of {item: string, amount: string}
  instructions Json     // Array of {step: number, text: string}
  isPinned     Boolean  @default(false) @map("is_pinned")
  imageUrl     String?  @map("image_url")
  createdBy    String   @map("created_by")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user         User     @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  tags         RecipeTag[]

  @@index([name])
  @@index([createdBy])
  @@index([isPinned])
  @@map("recipes")
}

model Tag {
  id        String      @id @default(uuid())
  name      String      @unique
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")

  recipes   RecipeTag[]

  @@map("tags")
}

model RecipeTag {
  recipeId  String   @map("recipe_id")
  tagId     String   @map("tag_id")

  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([recipeId, tagId])
  @@map("recipe_tags")
}

model GeminiUsage {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  requestType String   @map("request_type") // 'url' or 'video'
  tokensUsed  Int?     @map("tokens_used")
  success     Boolean  @default(true)
  timestamp   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([timestamp])
  @@index([userId, timestamp])
  @@map("gemini_usage")
}
